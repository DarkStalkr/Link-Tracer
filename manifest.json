{
    "manifest_version": 2,
    "version": "1.0",
    "name": "LinkTracer",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "webRequest",
        "proxy",
        "contextMenus",
        "webRequestBlocking"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "19": "logo2.png"
        }
    },
    "icons": {
        "48": "logo2.png"
    }
}
